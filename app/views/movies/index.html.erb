<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<div class="parent">
  <% @movies.each do |movie| %>
    <div class="card">
      <img class="movie-image" src="<%= movie.image %>">
      <div class="container">
        <div class="title"><%= movie.name %></div>
        <% movie.planners.each_with_index do |planner, index| %>
          <% if index == 0%>
            <div class="dates">
              <div>
                <strong>Desde:</strong>
                <%= planner.start_date.to_s.gsub('-', '/') %>
              </div>

              <div>
                <strong>Hasta:</strong>
                <%= planner.end_date.to_s.gsub('-', '/') %>
              </div>
            </div>
            
          <% end %>
          <div class="room-time">
            <span>
              <strong>Room:</strong>
              <%= planner.room %>
            </span>

            <span>
              <strong>Time:</strong>
              <%= {1 => "MatinÃ©", 2 => "Tanda", 3 => "Noche"}[planner.time] %>
            </span>
            <%= link_to "Choose Seats", new_movie_path(:movie_id => movie.id, :room => planner.room, :time => planner.time ) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Movie', new_movie_path %>
